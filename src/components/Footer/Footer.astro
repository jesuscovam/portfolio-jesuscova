---
import { config } from '../data/config';
import Logo from '../Logo.astro';
import SocialIcons from '../SocialIcons.astro';
import './Footer.css';
---

<footer>
	<div class="footer__container">
    <Logo name={config.name} />
		<SocialIcons width="23" height="23" />
	</div>

	<aside class="footer__links">
		<ul>
			<li>
        <a class="footer__link" href={`mailto:${config.email}`}
					><span
						><iconify-icon
							icon="fluent:mail-28-regular"
							width="27"
							height="27"
							style="color: #dcd8fc"></iconify-icon></span
          >{config.email}</a>
			</li>
			<li>
				<a class="footer__link"
                href="https://github.com/SofiDevO/primer-blog"
                target="_blank"
                rel="nofollow noreferrer noopener"
					><span
						><iconify-icon
							icon="mdi:github"
							width="27"
							height="27"
							style="color: #dcd8fc"></iconify-icon></span
          >@{config.github}</a>
			</li>
		</ul>
	</aside>
</footer>
