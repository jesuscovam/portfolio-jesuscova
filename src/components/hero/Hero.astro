---
import './hero.css';
import Boton from '../atoms/Boton.astro';
import { config } from '../data/config'
---

<section class="hero">

	<div class="hero__container">
		<div class="text__content">
      <h1 class="hero__title color__gradiente">{config.name}</h1>
			<p class="hero__text">
        Desarrollador de aplicaciones Web, Móviles, y API's.
			</p>
			<Boton href="#" texto="Quiero saber más"/>
		</div>
    <img
		class="hero__img"
		src="/img/pingu.jpg"
		alt="Jhon Doe"
		width="384"
    	height="384"
	/>
	</div>
</section>
